from datetime import datetime
import random
print("----------BEM VINDO A NOSSA EMPRESA--------------")
nome = input("digite seu nome: ")
idade = input("informe sua idade: ")
data = datetime.now()
cartao = ['R$50,00','R$250,00','R$120,00']
cartao = random.choice(cartao)
aniversario = datetime.strptime(input("digite sua data de aniversario no formato dd/mm/aaaa: "),"%d/%m/%Y")

print(f'Olá {nome}, seu registro foi conluído com sucesso no dia {data.day}/{data.month}/{data.year}.\nParabéns, houve um sorteio e você ganhou um cartão de compras no valor de {cartao}')
